{
  "name": "selfkey-ui",
  "version": "1.0.0",
  "description": "UI components for the SelfKey project",
  "main": "build/lib/index.js",
  "types": "build/lib/index.d.ts",
  "files": [
    "build/lib"
  ],
  "scripts": {
    "start": "start-storybook -p 6006",
    "build": "yarn lint && yarn build-lib",
    "build-lib": "tsc && yarn copy-assets-to-lib",
    "test": "jest --maxWorkers 2",
    "test:coverage": "npm test -- --coverage",
    "build-storybook": "build-storybook",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "copy-assets-to-lib": "cpx \"./src/assets/**/*.*\" ./build/lib/assets/",
    "deploy-storybook": "storybook-to-ghpages"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/SelfKeyFoundation/selfkey-ui.git"
  },
  "author": "SelfKey Foundation",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SelfKeyFoundation/selfkey-ui/issues"
  },
  "homepage": "https://github.com/SelfKeyFoundation/selfkey-ui#readme",
  "dependencies": {
    "@material-ui/core": "3.5.1",
    "@material-ui/icons": "3.0.1",
    "@material-ui/lab": "3.0.0-alpha.17",
    "@types/google.visualization": "0.0.42",
    "@types/react-dom": "16.0.6",
    "bignumber.js": "7.2.1",
    "jss": "9.8.7",
    "jss-compose": "5.0.0",
    "jss-expand": "5.3.0",
    "jss-extend": "6.2.0",
    "jss-global": "3.0.0",
    "jss-preset-default": "4.5.0",
    "jss-template": "1.0.1",
    "lodash": "4.17.10",
    "react": "16.5.2",
    "react-copy-to-clipboard": "5.0.1",
    "react-dom": "16.5.2",
    "react-google-charts": "1.6.6",
    "react-jss": "8.4.0",
    "reset-jss": "1.0.0",
    "react-truncate": "2.4.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "3.4.2",
    "@storybook/addon-backgrounds": "3.4.2",
    "@storybook/addon-info": "3.4.2",
    "@storybook/addon-links": "3.4.2",
    "@storybook/addons": "3.4.2",
    "@storybook/react": "3.4.2",
    "@storybook/storybook-deployer": "2.3.0",
    "@types/jest": "22.2.3",
    "@types/lodash": "4.14.116",
    "@types/react-test-renderer": "16.0.2",
    "@types/storybook__addon-backgrounds": "3.2.0",
    "@types/storybook__addon-info": "3.2.3",
    "@types/storybook__addon-links": "3.3.0",
    "@types/storybook__react": "3.0.7",
    "awesome-typescript-loader": "4.0.0",
    "babel-core": "6.26.0",
    "babel-runtime": "6.26.0",
    "cpx": "1.5.0",
    "cz-conventional-changelog": "2.1.0",
    "cz-jira-smart-commit": "3.0.0",
    "jest": "22.4.3",
    "react-docgen-typescript-webpack-plugin": "1.1.0",
    "react-test-renderer": "16.4.2",
    "storybook-addon-jsx": "5.3.0",
    "storybook-host": "5.0.0",
    "ts-jest": "22.4.4",
    "tslint": "5.9.1",
    "typescript": "3.0.3"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testURL": "http://localhost",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "(.d)\\.(ts)$"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
